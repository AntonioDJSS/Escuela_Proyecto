<div class="card card-body p-4 rounded-0 bg-primary bg-gradient text-white">
  <h4> Agregar Asignaturas</h4>
  <form action="/asignaturas/agregar" method="POST">
    <div>
      <label for="nombre">Nombre:</label>
      <input
        type="text"
        name="nombre"
        placeholder="Nombre"
        id="nombre"
        class="form-control text-dark"
      />
    </div>
    <div>
      <label for="creditos">Creditos:</label>
      <input
        type="number"
        name="creditos"
        placeholder="creditos"
        id="creditos"
        class="form-control text-dark"
      />
    </div>
    <div>
      <label for="horas">Horas:</label>
      <input
        type="number"
        name="horas"
        placeholder="Horas"
        id="horas"
        class="form-control text-dark"
      />
    </div>
    <button class="btn btn-warning btn-sm mt-2">Agregar</button>
  </form>

</div>