<div class="card card-body p-4 bg-primary bg-gradient text-white">
  <h4>Agregar Alumno</h4>
  <form action="/alumnos/agregar" method="POST">
    <div>
      <label for="nombre">Escribe tu nombre(s):</label>
      <input
        type="text"
        name="nombre"
        placeholder="Nombre"
        id="nombre"
        class="form-control text-dark"
      />
    </div>
    <div>
      <label for="paterno">Escribe tu apellido paterno:</label>
      <input
        type="text"
        name="paterno"
        placeholder="Apellido Paterno"
        id="paterno"
        class="form-control text-dark"
      />
    </div>
    <div>
      <label for="materno">Escribe tu apellido materno:</label>
      <input
        type="text"
        name="materno"
        placeholder="Apellido Materno"
        id="materno"
        class="form-control text-dark"
      />
    </div>
    <div>
      <label for="fechaNac">Selecciona Fecha:</label>
      <input
        type="date"
        name="fechaNac"
        placeholder="12/01/0000"
        id="fechaNac"
      />
    </div>
    <div>
      <label for="sexo">seleciona sexo:</label>
      <select name="sexo" id="sexo" class="form-control text-dark">
        <option value=""></option>
        <option value="H">Hombre</option>
        <option value="M">Mujer</option>
      </select>
    </div>
    <div>
      <label for="telefono">Escribe tu numero telefonico:</label>
      <input
        type="number"
        name="telefono"
        placeholder="celular"
        id="telefono"
        class="form-control text-dark"
      />
    </div>
    <div>
      <label for="direccion">Direccion:</label>
      <input
        type="text"
        name="direccion"
        placeholder="direccion"
        id="direccion"
        class="form-control text-dark"
      />
    </div>
    <button class="btn btn-warning btn-sm mt-2">Agregar</button>
  </form>
</div>